meta {
  name: Create Oauth Introspect
  type: http
  seq: 2
}

post {
  url: {{baseUrl}}/oauth/introspect
  body: json
  auth: inherit
}

headers {
  Notion-Version: '2025-09-03'
  Authorization: {{notion_token}}
}

body:json {
  {
    "token": ""
  }
}

example {
  name: success (basic)
  
  request: {
    url: {{baseUrl}}/oauth/introspect
    method: POST
    mode: json
    headers: {
      Notion-Version: '2025-09-03'
      Authorization: {{notion_token}}
    }
  
    body:json: {
      {
        "token": "secret_abc123def456"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: 200
      text: OK
    }
  
    body: {
      type: json
      content: '''
        {
          "active": true,
          "client_id": "01da9b00-e400-4959-91ce-af55307647e5",
          "token_type": "bearer",
          "workspace_id": "01da9b00-e400-4959-91ce-af55307647e5"
        }
      '''
    }
  }
}

example {
  name: unauthorized (basic)
  
  request: {
    url: {{baseUrl}}/oauth/introspect
    method: POST
    mode: json
    headers: {
      Notion-Version: '2025-09-03'
      Authorization: {{notion_token}}
    }
  
    body:json: {
      {
        "token": "secret_abc123def456"
      }
    }
  }
  
  response: {
    headers: {
      Content-Type: application/json
    }
  
    status: {
      code: 401
      text: Unauthorized
    }
  
    body: {
      type: json
      content: '''
        {
          "object": "error",
          "status": 401,
          "code": "unauthorized",
          "message": "API token is invalid"
        }
      '''
    }
  }
}
